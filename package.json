{
  "name": "password-manager",
  "version": "1.0.5",
  "description": "Password Manager with auto update",
  "main": "src/main/index.js",
  "author": "LEZZER GAMES STUDIO",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Lezzer-Games-Studio/Password-Manager.git"
  },

  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist",
    "build": "electron-builder --win --x64",
    "build:win": "electron-builder --win --x64",
    "release": "electron-builder --win --x64 --publish always",
    "release:local": "electron-builder --win --x64 --publish never"
  },

  "dependencies": {
    "electron-log": "^5.2.0",
    "electron-updater": "^6.7.3"
  },

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },

  "build": {
    "appId": "com.lezzergames.passwordmanager",
    "productName": "Password Manager",
    "copyright": "Copyright Â© 2024 LEZZER GAMES STUDIO",
    
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },

    "files": [
      "src/**/*",
      "package.json"
    ],

    "asar": true,

    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "LEZZER GAMES STUDIO"
    },

    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Password Manager",
      "uninstallDisplayName": "Password Manager",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },

    "publish": [
      {
        "provider": "github",
        "owner": "Lezzer-Games-Studio",
        "repo": "Password-Manager",
        "releaseType": "release",
        "private": false
      }
    ]
  }
}