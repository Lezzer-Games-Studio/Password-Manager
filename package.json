{
  "name": "password-manager",
  "version": "1.0.1",
  "description": "Password Manager with auto update",
  "main": "src/main/index.js",
  "author": "LEZZER GAMES STUDIO",
  "license": "MIT",
  "private": true,

  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean": "rimraf dist",
    "build:win": "electron-builder --win --x64 --publish never",
    "build:publish": "electron-builder --win --x64 --publish always"
  },

  "dependencies": {
    "electron-log": "^5.2.0",
    "electron-updater": "^6.7.3"
  },

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },

  "build": {
    "appId": "com.lezzergames.passwordmanager",
    "productName": "Password Manager",

    "directories": {
      "output": "dist",
      "buildResources": "build"
    },

    "files": [
      "src/**/*",
      "package.json"
    ],

    "asar": true,

    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },

    "publish": [
      {
        "provider": "github",
        "owner": "Lezzer-Games-Studio",
        "repo": "Password-Manager"
      }
    ]
  }
}
